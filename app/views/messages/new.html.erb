<h1>Send SMS</h1>

<%= form_with url: send_message_path, method: :post do |form| %>
  <div>
    <%= form.label :phone_number, "Recipient Phone Number" %>
    <%= form.text_field :phone_number, required: true %>
  </div>

  <div>
    <%= form.label :message, "Message" %>
    <%= form.text_area :message, required: true %>
  </div>

  <div>
    <%= form.submit "Send SMS" %>
  </div>
<% end %>

<%= link_to "Back", root_path %>
