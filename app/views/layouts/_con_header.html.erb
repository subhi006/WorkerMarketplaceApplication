<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #67B7D1;">
    <div class="container-fluid">      
       <% if current_user.profile.present? %>
          <% if can? :read, Profile %>
            <%= link_to profile_path(current_user), class: "navbar-brand d-flex align-items-center text-white" do %>
            <i class="fas fa-user-circle me-2"></i> Profile
             <% end %>       
          <%end%>
      <% else %>
          <% if can? :create, Profile %>
            <%= link_to new_profile_path, class: "navbar-brand d-flex align-items-center text-white" do %>
              <i class="fas fa-user-circle me-2"></i> Profile
            <% end %>  
          <%end%>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link text-white" do %>
              <i class="fas fa-home me-1"></i> Home
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to contractor_tasks_path, class: "nav-link text-white" do %>
              <i class="fas fa-tasks me-1"></i> Tasks
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to assigned_tasks_path, class: "nav-link text-white" do %>
              <i class="fas fa-tasks me-1"></i> Running Tasks
            <% end %>
          </li>

          <li class="nav-item">
            <span class="nav-link text-white fw-bold">
              <i class="fas fa-user-tag me-1"></i> <%= current_user.role.capitalize %>
            </span>
          </li>

          <li class="nav-item">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-danger shadow-sm ms-2" do %>
              <i class="fas fa-sign-out-alt me-1"></i> Sign Out
            <% end %>
          </li>
        </ul>
      </div>      
    </div>
  </nav>
</header>