<h1 class="text-center mb-4">Your Applications</h1>

<% if @applications.any? %>
  <table class="table table-bordered table-striped">
    <thead class="table-primary">
      <tr>
        <th>Task</th>
        <th>Company</th>
        <th>Applied On</th>
        <th>Status</th>
        <th>joined</th>
      </tr>
    </thead>
    <tbody>
      <% @applications.each do |application| %>
        <tr>
          <td><%= category(application.task) %></td>
          <td><%= company(application.task)%></td>
          <td><%= formate_date(application.created_at)%></td>
          <td><%= application.status %></td>
          <td>
          <% if application.status.eql?("approved")%>
          <%if application.worker.profile.joining_status.eql?("deny") %>
              <%= link_to "Join", joining_status_path(application.worker.profile), class: "btn btn-success btn-sm", method: :patch %>
          <%else%>
              <p> joined </p>
          <%end%>
          <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-center">You haven't applied for any tasks yet.</p>
<% end %>
