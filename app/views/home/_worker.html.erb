<div class="container mt-4">
  <div class="text-center">
    <h1 class="text-primary"> JobYatra <h1>
    <div class="mt-4 d-flex flex-column align-items-center">
      <% if current_user.profile.present? %>
          <% if can? :read, Profile %>
            <%= link_to "Profile", profile_path(current_user), class: "btn btn-outline-primary w-100 py-2 mb-3 fw-semibold shadow-sm rounded-pill" %>
          <%end%>
      <% else %>
          <% if can? :create, Profile %>
            <%= link_to "Create a Profile", new_profile_path, class: "btn btn-outline-primary w-100 py-2 mb-3 fw-semibold shadow-sm rounded-pill" %>
          <%end%>
      <% end %>
      <% if can? :read, Task %>
        <%= link_to " View All Tasks", worker_tasks_path, class: "btn btn-outline-primary w-100 py-2 mb-3 fw-semibold shadow-sm rounded-pill" %>
      <% end %>
      <% if can? :read, Application %>
        <%= link_to " View All Applications", worker_applications_path, class: "btn btn-outline-secondary w-100 py-2 mb-3 fw-semibold shadow-sm rounded-pill" %>
      <% end %>
  </div>
</div>


<style>
  .btn {
    border-radius: 25px; 
  }

  .btn:hover {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  h1 a {
    transition: color 0.3s ease;
  }

  h1 a:hover {
    color: #4B8F94; 
  }
</style>
